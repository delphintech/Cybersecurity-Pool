# Nom du projet
NAME = inquisitor

# RÃ©pertoire de l'environnement virtuel
VENV = venv
PYTHON = $(VENV)/bin/python
PIP = $(VENV)/bin/pip

# Bash et prompt definition
SHELL := /bin/bash
PROMPT := \[\e[1;36m\](venv)\[\e[0m\] \W \$$

# RÃ©pertoire du code source
SRC_DIR = srcs

# Fichier principal Ã  exÃ©cuter
MAIN = $(SRC_DIR)/main.py

# Couleur
COLOR = \e[1;41m
RESET = \e[0m

# ===========================================================
# Commandes principales
# ===========================================================

# Par dÃ©faut : crÃ©er l'environnement et lancer le projet
all: $(NAME)

# CrÃ©er l'exÃ©cutable wrapper
$(NAME): $(VENV) install $(MAIN)
	@printf "ğŸ”¨ Creating executable wrapper...\n"
	@echo '#!/bin/bash' > $(NAME)
	@echo 'DIR="$$(cd "$$(dirname "$${BASH_SOURCE[0]}")" && pwd)"' >> $(NAME)
	@echo 'source "$$DIR/$(VENV)/bin/activate"' >> $(NAME)
	@echo 'python "$$DIR/$(MAIN)" "$$@"' >> $(NAME)
	@chmod +x $(NAME)            
	@printf "$(COLOR) â–„â–„ â–„â–„  â–„â–„  â–„â–„â–„  â–„â–„ â–„â–„ â–„â–„  â–„â–„â–„â–„ â–„â–„ â–„â–„â–„â–„â–„â–„ â–„â–„â–„  â–„â–„â–„â–„  $(RESET)\n"
	@printf "$(COLOR) â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–„â–ˆâ–ˆ â–ˆâ–ˆâ–€â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆ â–ˆâ–ˆâ–ˆâ–„â–„ â–ˆâ–ˆ   â–ˆâ–ˆ  â–ˆâ–ˆâ–€â–ˆâ–ˆ â–ˆâ–ˆâ–„â–ˆâ–„ $(RESET)\n"
	@printf "$(COLOR) â–ˆâ–ˆ â–ˆâ–ˆ â–€â–ˆâ–ˆ â–€â–ˆâ–ˆâ–ˆâ–€ â–€â–ˆâ–ˆâ–ˆâ–€ â–ˆâ–ˆ â–„â–„â–ˆâ–ˆâ–€ â–ˆâ–ˆ   â–ˆâ–ˆ  â–€â–ˆâ–ˆâ–ˆâ–€ â–ˆâ–ˆ â–ˆâ–ˆ $(RESET)\n"
	@printf "$(COLOR)              â–€â–€                                     $(RESET)\n"

# pour lancer le shell de l'environnement
activate: $(VENV)
	@printf "ğŸ’» Activating virtual environment ...\n"
	@source $(VENV)/bin/activate && PS1='$(PROMPT)  ' bash --norc

# 1ï¸âƒ£ CrÃ©er et activer l'environnement virtuel
$(VENV):
	@printf "ğŸ› ï¸ Creating virtual environment ... \n"
	@test -d $(VENV) || python3 -m venv $(VENV)
	@$(PIP) install --upgrade pip

# Installe les dÃ©pendances (utile si on modifie requirements.txt)
install: $(VENV)
	@printf "ğŸ“¦ Installing dependencies ... \n"
	@if [ -f requirements.txt ]; then $(PIP) install -r requirements.txt; fi

# Supprime les fichiers temporaires et l'environnement virtuel
clean: 
	@printf "ğŸ§¹ Cleaning ...\n"
	@rm -rf $(VENV) $(NAME)
	@find . -type d -name "__pycache__" -exec rm -rf {} +

# Relance tout depuis zÃ©ro
re: clean all

# Lance la norme
norm: $(VENV)
	@$(VENV)/bin/flake8 $(SRC_DIR) --exclude=$(VENV),__pycache__

.PHONY: activate install run clean re

